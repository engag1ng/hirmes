{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "hirmes",
    "version": "0.2.0"
  },
  "build": {
    "distDir": "../src",
    "beforeBuildCommand": "build-flask.bat",
    "withGlobalTauri": true
  },
  "tauri": {
    "bundle": {
      "identifier": "app.hirmes",
      "active": true,
      "targets": "all",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "bin/app.exe"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Hirmes",
        "url": "http://127.0.0.1:5000",
        "width": 1600,
        "height": 1200,
        "visible": false
      },
      {
        "label": "splashscreen",
        "width": 1600,
        "height": 1200,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": false,
        "fullscreen": false,
        "url": "splashscreen.html",
        "visible": true
      }
    ]
  }
}
